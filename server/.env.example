// server/.env.example
NODE_ENV=development
PORT=5000
MONGO_URI=mongodb://localhost:27018/rtsp_management
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=1d
COOKIE_EXPIRE=1
SERVER_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX=100

OLLAMA_API_URL=http://localhost:11434/api
EMBEDDING_MODEL=nomic-embed-text:v1.5

# VLM Configuration
VLM_API_URL=http://localhost:8000/v1/chat/completions
VLM_MODEL=Qwen2.5-VL-3B-Instruct
VLM_MAX_TOKENS=1000

# HLS Cleanup Configuration
HLS_MAX_SIZE_GB=1000
HLS_CLEANUP_INTERVAL_MS=3600000
HLS_RETENTION_DAYS=30
HLS_CAPTURES_PATH=
HLS_AUTO_CLEANUP_ENABLED=true
HLS_EMERGENCY_THRESHOLD=0.95
HLS_EMERGENCY_TARGET_SIZE=0.80